<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="200sp"
        android:layout_height="match_parent"
        tools:context=".StoreListDialog">
    <ScrollView android:id="@+id/packed_scrl"
                android:layout_width="200sp" android:layout_height="150sp"
                tools:ignore="MissingConstraints">
        <LinearLayout
                android:id="@+id/picked_list"
                android:layout_width="match_parent"
                android:layout_height="150sp" tools:ignore="MissingConstraints" android:orientation="vertical"
                android:gravity="center">

        </LinearLayout>
    </ScrollView>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  tools:ignore="MissingConstraints" app:layout_constraintTop_toBottomOf="@id/packed_scrl"
                    android:gravity="center">
        <Button
                android:id="@+id/reset_button"
                android:text="@string/reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="115sp"
                tools:ignore="MissingConstraints" />

        <Button android:id="@+id/cancle_button"
                android:layout_width="wrap_content" android:layout_height="wrap_content" tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="115sp"
                android:text="@string/cancel"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>